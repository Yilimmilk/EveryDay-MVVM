<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/splashFragment">
    <fragment
        android:id="@+id/splashFragment"
        android:name="cn.mapotofu.everydaymvvm.ui.fragment.splash.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment_to_scheduleFragment"
            app:destination="@id/scheduleFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popUpTo="@id/scheduleFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="cn.mapotofu.everydaymvvm.ui.fragment.login.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_loadScheduleFragment"
            app:destination="@id/loadScheduleFragment" />
    </fragment>
    <fragment
        android:id="@+id/scheduleFragment"
        android:name="cn.mapotofu.everydaymvvm.ui.fragment.schedule.ScheduleFragment"
        android:label="CourseTableFragment"
        tools:layout="@layout/fragment_schedule" >
        <action
            android:id="@+id/action_scheduleFragment_to_loadScheduleFragment"
            app:destination="@id/loadScheduleFragment" />
        <action
            android:id="@+id/action_scheduleFragment_to_addCourseFragment"
            app:destination="@id/addCourseFragment" />
    </fragment>

    <action
        android:id="@+id/action_to_loginFragment"
        app:destination="@id/loginFragment"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim"
        app:popEnterAnim="@anim/pop_enter_anim"
        app:popExitAnim="@anim/pop_exit_anim" />

    <fragment
        android:id="@+id/loadScheduleFragment"
        android:name="cn.mapotofu.everydaymvvm.ui.fragment.load_schedule.LoadScheduleFragment"
        android:label="LoadScheduleFragment"
        tools:layout="@layout/fragment_load_schedule" >
        <action
            android:id="@+id/action_loadScheduleFragment_to_scheduleFragment"
            app:destination="@id/scheduleFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/pop_enter_anim"
            app:popExitAnim="@anim/pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/addCourseFragment"
        android:name="cn.mapotofu.everydaymvvm.ui.fragment.add_course.AddCourseFragment"
        android:label="AddCourseFragment"
        tools:layout="@layout/fragment_add_course" />
</navigation>
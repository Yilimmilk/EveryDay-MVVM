<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widgetRootView"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp80">

    <LinearLayout
        android:id="@+id/widgetContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp2"
        android:padding="@dimen/dp2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_left"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/shape_widget_item_round"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp8"
            android:paddingTop="@dimen/dp2"
            android:paddingBottom="@dimen/dp2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/day_class_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="高等数学"
                android:maxLines="1"
                android:textColor="@android:color/black"
                android:textSize="@dimen/t15"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/day_class_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="教学楼A304"
                android:maxLines="1"
                android:textColor="@color/gray"
                android:textSize="@dimen/t12"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/day_class_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/t12"
                        android:text="1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/dp2"
                        android:layout_marginEnd="@dimen/dp2"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/t12"
                        android:text="-"/>

                    <TextView
                        android:id="@+id/day_class_end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/t12"
                        android:text="2"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp5"
                    android:text="|"
                    android:textSize="@dimen/t12"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp5"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/day_time_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/t12"
                        android:text="8:00"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/dp2"
                        android:layout_marginEnd="@dimen/dp2"
                        android:textSize="@dimen/t12"
                        android:text="-"/>

                    <TextView
                        android:id="@+id/day_time_end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/t12"
                        android:text="8:45"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>